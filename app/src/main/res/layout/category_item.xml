<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/circle_category_handler_id"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_circle_category_handler" />

    <TextView
        android:id="@+id/category_item_name_id"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Category name"
        app:layout_constraintBottom_toBottomOf="@+id/circle_category_handler_id"
        app:layout_constraintEnd_toStartOf="@+id/category_item_change_id"
        app:layout_constraintStart_toEndOf="@+id/circle_category_handler_id"
        app:layout_constraintTop_toTopOf="@+id/circle_category_handler_id" />

    <ImageButton
        android:id="@+id/category_item_change_id"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/category_item_name_id"
        app:layout_constraintStart_toEndOf="@+id/category_item_name_id"
        app:layout_constraintTop_toTopOf="@+id/category_item_name_id"
        app:srcCompat="@drawable/ic_pen"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/category_item_cross_id"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/category_item_change_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/category_item_change_id"
        app:layout_constraintTop_toTopOf="@+id/category_item_change_id"
        app:srcCompat="@drawable/ic_cross"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/category_item_tab_id"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_category_handler_id"
        app:layout_constraintEnd_toEndOf="@+id/circle_category_handler_id"
        app:layout_constraintStart_toStartOf="@+id/circle_category_handler_id"
        app:layout_constraintTop_toTopOf="@+id/circle_category_handler_id"
        app:srcCompat="@drawable/ic_category_tag" />
</androidx.constraintlayout.widget.ConstraintLayout>