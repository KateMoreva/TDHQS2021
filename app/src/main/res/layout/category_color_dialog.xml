<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_filled_white_outline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_5">

    <EditText
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/padding_20"
        android:paddingVertical="@dimen/padding_5"
        android:paddingHorizontal="@dimen/padding_5"
        android:text="Имя категории"
        android:textSize="25sp"
        android:padding="@dimen/padding_5"
        app:layout_constraintLeft_toRightOf="@id/selected_category_color"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/selected_category_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/padding_5"
        app:srcCompat="@drawable/ic_category_color_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/category_color_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_category_color_red"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/padding_5"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/padding_20"
        app:layout_constraintRight_toLeftOf="@+id/category_color_orange"
        app:layout_constraintTop_toBottomOf="@+id/category_name"
        app:layout_constraintBottom_toTopOf="@+id/category_color_purple" />

    <ImageView
        android:id="@+id/category_color_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/padding_20"
        app:srcCompat="@drawable/ic_category_color_orange"
        app:layout_constraintLeft_toRightOf="@+id/category_color_red"
        app:layout_constraintRight_toLeftOf="@+id/category_color_yellow"
        app:layout_constraintTop_toBottomOf="@+id/category_name"
        app:layout_constraintBottom_toTopOf="@+id/category_color_gray" />

    <ImageView
        android:id="@+id/category_color_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/padding_20"
        app:srcCompat="@drawable/ic_category_color_yellow"
        app:layout_constraintLeft_toRightOf="@+id/category_color_orange"
        app:layout_constraintRight_toLeftOf="@+id/category_color_green"
        app:layout_constraintTop_toBottomOf="@+id/category_name"
        app:layout_constraintBottom_toTopOf="@+id/category_color_black" />

    <ImageView
        android:id="@+id/category_color_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/padding_20"
        app:srcCompat="@drawable/ic_category_color_green"
        app:layout_constraintLeft_toRightOf="@+id/category_color_yellow"
        app:layout_constraintRight_toLeftOf="@+id/category_color_light_blue"
        app:layout_constraintTop_toBottomOf="@+id/category_name"
        app:layout_constraintBottom_toTopOf="@+id/category_color_pink" />

    <ImageView
        android:id="@+id/category_color_light_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_category_color_light_blue"
        android:padding="@dimen/padding_5"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/padding_20"
        app:layout_constraintLeft_toRightOf="@+id/category_color_green"
        app:layout_constraintRight_toLeftOf="@+id/category_color_blue"
        app:layout_constraintTop_toBottomOf="@+id/category_name"
        app:layout_constraintBottom_toTopOf="@+id/category_color_light_green" />

    <ImageView
        android:id="@+id/category_color_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/padding_20"
        app:srcCompat="@drawable/ic_category_color_blue"
        app:layout_constraintLeft_toRightOf="@+id/category_color_light_blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_name"
        app:layout_constraintBottom_toTopOf="@+id/category_color_acid" />

    <ImageView
        android:id="@+id/category_color_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/padding_5"
        app:srcCompat="@drawable/ic_category_color_purple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/category_color_gray"
        app:layout_constraintTop_toBottomOf="@+id/category_color_red"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/padding_20"
        app:layout_constraintBottom_toTopOf="@id/save_category" />

    <ImageView
        android:id="@+id/category_color_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/padding_5"
        app:srcCompat="@drawable/ic_category_color_grey"
        app:layout_constraintLeft_toRightOf="@+id/category_color_purple"
        app:layout_constraintRight_toLeftOf="@+id/category_color_black"
        app:layout_constraintTop_toBottomOf="@+id/category_color_orange"
        android:layout_marginBottom="@dimen/padding_20"
        app:layout_constraintBottom_toTopOf="@id/save_category" />

    <ImageView
        android:id="@+id/category_color_black"
        android:layout_width="wrap_content"
        android:padding="@dimen/padding_5"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/padding_5"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_category_color_black"
        app:layout_constraintLeft_toRightOf="@+id/category_color_gray"
        app:layout_constraintRight_toLeftOf="@+id/category_color_pink"
        app:layout_constraintTop_toBottomOf="@+id/category_color_yellow"
        android:layout_marginBottom="@dimen/padding_20"
        app:layout_constraintBottom_toTopOf="@id/save_category" />

    <ImageView
        android:id="@+id/category_color_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_category_color_pink"
        android:padding="@dimen/padding_5"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/padding_5"
        app:layout_constraintLeft_toRightOf="@+id/category_color_black"
        app:layout_constraintRight_toLeftOf="@+id/category_color_light_green"
        app:layout_constraintTop_toBottomOf="@+id/category_color_green"
        android:layout_marginBottom="@dimen/padding_20"
        app:layout_constraintBottom_toTopOf="@id/save_category" />

    <ImageView
        android:id="@+id/category_color_light_green"
        android:layout_width="wrap_content"
        android:padding="@dimen/padding_5"
        android:clickable="true"
        android:focusable="true"
        android:tooltipText="green"
        android:layout_marginTop="@dimen/padding_5"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_category_color_light_green"
        app:layout_constraintLeft_toRightOf="@+id/category_color_pink"
        app:layout_constraintRight_toLeftOf="@+id/category_color_acid"
        app:layout_constraintTop_toBottomOf="@+id/category_color_light_blue"
        android:layout_marginBottom="@dimen/padding_20"
        app:layout_constraintBottom_toTopOf="@id/save_category" />

    <ImageView
        android:id="@+id/category_color_acid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/padding_5"
        app:srcCompat="@drawable/ic_category_color_acid"
        app:layout_constraintLeft_toRightOf="@+id/category_color_light_green"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_color_blue"
        android:layout_marginBottom="@dimen/padding_20"
        app:layout_constraintBottom_toTopOf="@id/save_category" />

    <Button
        android:id="@+id/save_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:paddingHorizontal="@dimen/padding_5"
        android:paddingVertical="@dimen/padding_5"
        android:layout_marginVertical="@dimen/padding_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>