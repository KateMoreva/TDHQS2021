<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/account_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/change_category_button_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/transparent"

        app:strokeColor="@color/transparent"
        app:strokeWidth="0dp"
        app:cardCornerRadius="0dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        android:focusable="true"
        >

        <TextView
            android:id="@+id/account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/account"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_25"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_16dp"
            />

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/change_category_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:theme="@style/AppTheme"
        app:cardBackgroundColor="@color/very_strange_color"
        app:layout_constraintBottom_toTopOf="@+id/bug_report_button_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_button_id"
        app:strokeColor="@color/gray_4"
        app:cardCornerRadius="0dp"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_16dp"
            android:drawableStart="@drawable/ic_category_tag"
            android:text="@string/change_categories"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_25" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bug_report_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/about_button_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_category_button_id"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="0dp"
        app:strokeColor="@color/transparent"
        app:strokeWidth="0dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        android:focusable="true"
        >

        <TextView
            android:id="@+id/bug_report_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/bug_report"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_25"
            android:drawableStart="@drawable/ic_bug_report"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_16dp"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/about_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bug_report_button_id"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="0dp"
        app:strokeColor="@color/transparent"
        app:strokeWidth="0dp"
        android:theme="@style/AppTheme"
        android:clickable="true"
        android:focusable="true"
        >

        <TextView
            android:id="@+id/about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/about_app"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_25"
            android:drawableStart="@drawable/ic_info"
            android:layout_marginHorizontal="@dimen/dimens_16dp"
            android:layout_marginVertical="@dimen/dimens_16dp"
            />

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>